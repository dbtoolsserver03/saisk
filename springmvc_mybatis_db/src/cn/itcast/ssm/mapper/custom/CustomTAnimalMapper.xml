<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.itcast.ssm.mapper.custom.CustomTAnimalMapper">

  	<select id="findAnimalList" parameterType="cn.itcast.ssm.po.original.TAnimal"
  		 resultMap="cn.itcast.ssm.mapper.original.TAnimalMapper.BaseResultMap">
  		SELECT * FROM t_animal
  		<where>
   			<if test="sei!=null and sei != ''">
   				SEI LIKE '%${sei}%'
   			</if>
  		</where>
  	</select>

</mapper>