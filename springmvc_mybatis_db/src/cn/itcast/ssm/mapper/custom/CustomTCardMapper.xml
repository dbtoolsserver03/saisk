<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.itcast.ssm.mapper.custom.CustomTCardMapper">
  	<select id="findCardsList" parameterType="cn.itcast.ssm.po.original.CardTable"
  		 resultMap="cn.itcast.ssm.mapper.original.CardTableMapper.BaseResultMap">
  		SELECT * FROM card_table
  		<where>
   			<if test="cardName!=null and cardName != ''">
   				card_name LIKE '%${cardName}%'
   			</if>

  		</where>
  	</select>

</mapper>